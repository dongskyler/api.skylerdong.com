{
  "name": "api.skylerdong.com",
  "version": "0.1.0",
  "description": "Working repository for the back-end for my websites, built with Node, Express, Apollo Server, GraphQL, MongoDB Atlas and ElasticSearch",
  "repository": "https://github.com/dongskyler/api.skylerdong.com.git",
  "author": "Skyler Dong <dongskyler@gmail..com>",
  "license": "BSD-3-Clause",
  "private": true,
  "scripts": {
    "ci": "yarn --frozen-lockfile",
    "format": "prettier --config '.prettierrc.yml' --write '**/*.{css,html,md,js,json,yaml,yml}'",
    "lint": "eslint --config '.eslintrc.yml' --no-eslintrc '**/*.js' --cache --fix",
    "clean": "rm -rf dist-server",
    "transpile": "babel server --out-dir dist-server",
    "build": "yarn clean && yarn transpile",
    "test": "echo 'No test specified yet' && exit 0",
    "serve": "node dist-server/bin/www",
    "development": "nodemon --config 'nodemon.json'",
    "production": "NODE_ENV=production yarn build",
    "start": "yarn development",
    "run:dev": "pm2 start ./config/pm2/pm2-dev.config.js",
    "run:prod": "pm2 start ./config/pm2/pm2-prod.config.js",
    "refresh": "rm -rf node_modules && yarn ci"
  },
  "engines": {
    "node": ">=0.12 <0.15"
  },
  "dependencies": {
    "apollo-server": "^2.18.1",
    "apollo-server-express": "^2.16.0",
    "aws-sdk": "^2.761.0",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "clean-css": "^4.1.11",
    "constantinople": "3.1.1",
    "cookie-parser": "~1.4.4",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "debug": "~4.2.0",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "express-graphql": "^0.11.0",
    "faker": "^5.1.0",
    "graphql": "14.7",
    "http-errors": "~1.8.0",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.7",
    "morgan": "~1.10.0",
    "pug": "^3.0.0",
    "regenerator-runtime": "^0.13.7",
    "serve-favicon": "^2.5.0",
    "uglify-js": "^3.10.4",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2"
  }
}
