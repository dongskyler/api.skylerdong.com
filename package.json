{
  "name": "api.skylerdong.com",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "format": "prettier './server/**/*.js' --write",
    "lint": "eslint './server/**/*.js' --cache --fix",
    "clean": "rimraf dist-server",
    "transpile": "babel ./server --out-dir dist-server",
    "build": "npm-run-all clean transpile",
    "test": "echo 'No test specified yet' && exit 0",
    "server": "node ./dist-server/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "dev:watch": "nodemon --config ./nodemon.json",
    "prod": "NODE_ENV=production npm-run-all build server",
    "start": "yarn prod"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./server/**/*.js": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "apollo-server": "^2.14.3",
    "apollo-server-express": "^2.14.3",
    "body-parser": "^1.19.0",
    "clean-css": "^4.1.11",
    "constantinople": "3.1.1",
    "cookie-parser": "~1.4.4",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "debug": "~4.1.1",
    "dotenv": "^8.2.0",
    "elasticsearch": "^16.7.1",
    "express": "~4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.0.0",
    "http-errors": "~1.7.3",
    "mongoose": "^5.9.18",
    "morgan": "~1.10.0",
    "pug": "^3.0.0",
    "serve-favicon": "^2.5.0",
    "uglify-js": "^3.10.0",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "axios": "^0.19.2",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  }
}
