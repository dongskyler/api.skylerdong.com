{
  "name": "api.skylerdong.com",
  "version": "0.1.0",
  "description": "Working repository for the back-end for my websites, built with Node, Express, Apollo Server, GraphQL, MongoDB Atlas and ElasticSearch",
  "repository": "https://github.com/dongskyler/api.skylerdong.com.git",
  "author": "Skyler Dong <skylerdong@protonmail.com>",
  "license": "BSD-3-Clause",
  "private": true,
  "scripts": {
    "format": "prettier --config '.prettierrc.yml' --write '**/*.{css,html,md,js,json,yaml,yml}'",
    "lint": "eslint --config '.eslintrc.yml' --no-eslintrc '**/*.js' --cache --fix",
    "clean": "rimraf dist-server",
    "transpile": "babel server --out-dir dist-server",
    "build": "yarn clean && yarn transpile",
    "test": "echo 'No test specified yet' && exit 0",
    "serve": "node dist-server/bin/www",
    "development": "nodemon --config 'nodemon.json'",
    "production": "NODE_ENV=production yarn build",
    "start": "yarn development",
    "run:dev": "pm2 start ./config/pm2/pm2-dev.config.js",
    "run:prod": "pm2 start ./config/pm2/pm2-prod.config.js",
    "refresh": "rimraf node_modules && yarn --frozen-lockfile"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "apollo-server": "^2.19.1",
    "apollo-server-express": "^2.19.1",
    "aws-sdk": "^2.821.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "clean-css": "^4.1.11",
    "constantinople": "^3.1.1",
    "cookie-parser": "^1.4.4",
    "core-js": "^3.8.2",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "faker": "^5.1.0",
    "graphql": "^14.7.0",
    "http-errors": "^1.8.0",
    "mongodb": "^3.6.5",
    "mongoose": "^5.11.10",
    "morgan": "^1.10.0",
    "pug": "^3.0.0",
    "serve-favicon": "^2.5.0",
    "uglify-js": "^3.12.4",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  }
}
